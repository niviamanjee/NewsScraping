<div class="row">
    <div class="col s12 m7">
        {{#each articles}}
        {{#if this.reserve}}

        <div class="card">
            <div class="card-image">
                <img src="{{this.image}}">
                <span class="card-title">{{this.title}}</span>
            </div>
            <div class="card-content">
                <p>{{this.summary}}</p>
            </div>
            <div class="card-action">
                <a href="{{this.link}}" target="_blank">View Article</a>
                {{!-- <button class="save" data-id="{{this._id}}">Save Article</button> --}}
            </div>
        </div>

        {{/if}}
        {{/each}}
    </div>
</div>